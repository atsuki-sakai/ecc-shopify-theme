{% schema %}
{
  "name": "Marquee",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "padding_vertical",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Vertical Padding",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_horizontal",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Horizontal Padding",
      "default": 0
    },
    {
      "type": "range",
      "id": "speed",
      "min": 10,
      "max": 300,
      "step": 5,
      "unit": "s",
      "label": "Animation Duration",
      "default": 20
    },
    {
      "type": "range",
      "id": "gap",
      "min": 0,
      "max": 300,
      "step": 30,
      "unit": "px",
      "label": "Gap Between Items",
      "default": 30
    },
    {
      "type": "range",
      "id": "font_size",
      "min": 12,
      "max": 72,
      "step": 1,
      "unit": "px",
      "label": "Font Size",
      "default": 48
    },
    {
      "type": "checkbox",
      "id": "pause_on_hover",
      "label": "Pause on Hover",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "reverse",
      "label": "Reverse Direction",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text Content"
        }
      ]
    },
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "range",
          "id": "image_width",
          "min": 50,
          "max": 200,
          "step": 10,
          "unit": "px",
          "label": "Image Width",
          "default": 100
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Marquee",
      "blocks": [
        {
          "type": "text"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}

<style>
  #shopify-section-{{ section.id }} {
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
    padding: {{ section.settings.padding_vertical }}px {{ section.settings.padding_horizontal }}px;
  }
  .marquee-{{ section.id }} {
    display: flex;
    white-space: nowrap;
    overflow: hidden;
    gap: {{ section.settings.gap }}px;
    font-size: {{ section.settings.font_size }}px;
  }
  .marquee-inner-{{ section.id }} {
    display: flex;
    gap: {{ section.settings.gap }}px;
    animation: {% if section.settings.reverse %}marquee-reverse-{{ section.id }}{% else %}marquee-{{ section.id }}{% endif %} {{ section.settings.speed }}s linear infinite;
    {% if section.settings.reverse %}
      transform: translateX(-100%);
    {% endif %}
  }
  .marquee-item-{{ section.id }} {
    flex-shrink: 0;
  }
  .marquee-item-{{ section.id }} img {
    height: auto;
    vertical-align: middle;
    filter: drop-shadow(0px 3px 3px rgba(0, 0, 0, 0.3));
  }
  @keyframes marquee-{{ section.id }} {
    0%   { transform: translateX(0); }
    100% { transform: translateX(calc(-100% - {{ section.settings.gap }}px)); }
  }
  @keyframes marquee-reverse-{{ section.id }} {
    0%   { transform: translateX(-100%); }
    100% { transform: translateX(calc(0% + {{ section.settings.gap }}px)); }
  }
  {% if section.settings.pause_on_hover %}
  .marquee-{{ section.id }}:hover .marquee-inner-{{ section.id }} {
    animation-play-state: paused;
  }
  {% endif %}

  .section-marquee {
    position: absolute;
    top: 0;
    left: 100%;
    width: 100%;
  }
</style>


<div class="marquee-{{ section.id }}" style="width: 100vw; overflow: hidden; position: relative;">
  <div class="marquee-inner-{{ section.id }}" aria-hidden="false">
    {% for block in section.blocks %}
      <div class="marquee-item-{{ section.id }}" style="width:{{ block.settings.image_width }}px; height: auto;">
{{ block.settings.image | image_url: width: 300 | image_tag }}
      </div>
    {% endfor %}
  </div>
  <div class="marquee-inner-{{ section.id }} section-marquee" aria-hidden="false">
    {% for block in section.blocks %}
      <div class="marquee-item-{{ section.id }}" style="width:{{ block.settings.image_width }}px; height: auto;">
        {{ block.settings.image | image_url: width: 300 | image_tag }}
      </div>
    {% endfor %}
  </div>
</div>